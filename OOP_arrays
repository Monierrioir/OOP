#include <iostream>

class Nokta{
public:
    int x,y;
    void deger(int _x,int _y){
        x=_x;
        y= _y;
    }

    void yaz(){
        std::cout << x << "," << y<< std::endl;
    }
    bool initial(){
        if(x==0 && y==0)
            return true;
        else
            return false;
    }
};


int main() {
   Nokta n1;
   Nokta n2;
   Nokta* n3;
   Nokta array[10];
   Nokta* pArray;
   pArray= new Nokta[10];

   for(int i=0;i<10;i++){
       array[i].deger(i,i+2);
       (pArray+ sizeof (Nokta)*i)->deger(i+5,i+10);
   }
   for(int i=0;i<10;i++){
       array[i].yaz();
       (pArray+sizeof(Nokta)*i)->yaz();
       std::cout << std::endl;
   }

   n3=&n2;
   n1.deger(2,7);
  n1.yaz();

  n2.deger(8,9);
  n2.yaz();

  if(n1.initial()){
      std::cout << "n1 initial point" << std::endl;
  }
  if(n2.initial()){
      std::cout << "n2 initial point" << std::endl;

  }
  std::cout <<" value of n3 pointer: "<< std::endl;
  n3->yaz();

    return 0;
}
